{
  "manifest_version": 3,
  "name": "GitHub Issues Navigator",
  "version": "1.0.0",
  "description": "Navigate through GitHub issues and pull requests with keyboard shortcuts",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues*",
        "https://github.com/*/pulls*",
        "https://github.com/*/pull/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub Issues Navigator"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
